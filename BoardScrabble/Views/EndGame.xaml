<Page x:Class="BoardScrabble.Views.EndGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BoardScrabble.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EndGame">

    <Grid Background="#FFFDF6">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20" Width="400">
            <TextBlock Text="🏁 Permainan Selesai!"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="DarkSlateBlue"
                   TextAlignment="Center"
                   Margin="0,0,0,20" />

            <TextBlock x:Name="WinnerText"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="Green"
                   TextAlignment="Center"
                   Margin="0,0,0,10" />

            <ListBox x:Name="ScoreList"
                 FontSize="18"
                 Margin="0,0,0,20"
                 BorderThickness="0" />

            <Button Content="🔁 Kembali ke Menu Utama"
                Click="BackToMenu_Click"
                Width="250"
                Height="40"
                Background="DarkRed"
                Foreground="White"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                Cursor="Hand"/>
        </StackPanel>
    </Grid>

</Page>
