<Page x:Class="BoardScrabble.Views.BlankTileInput"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Title="BlankTileInput"
      Background="#f5f7fa">

    <Grid>
        <Border Background="White"
                Padding="30"
                Width="400"
                Height="340"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                CornerRadius="15"
                BorderBrush="#e0e0e0"
                BorderThickness="1">

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Judul -->
                <TextBlock Text="Replace Blank Tile"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#2e3a59"
                           TextAlignment="Center"
                           Margin="0 0 0 30"/>

                <!-- Textbox besar untuk input huruf -->
                <Border Background="#f1f3f6"
                        BorderBrush="#c4c4c4"
                        BorderThickness="1"
                        CornerRadius="8"
                        Width="50"
                        Height="60"
                        Margin="0 0 0 30">
                    <TextBox x:Name="LetterInputBox"
                             FontSize="30"
                             FontWeight="Bold"
                             MaxLength="1"
                             BorderThickness="0"
                             Background="Transparent"
                             HorizontalContentAlignment="Center"
                             VerticalContentAlignment="Center"
                             CaretBrush="Black"/>
                </Border>

                <!-- Tombol OK dan Batal -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0">
                    <Button Content="OK"
                            Width="100"
                            Height="40"
                            Margin="10 0"
                            Click="Ok_Click"
                            Background="#2b7a78"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderBrush="{x:Null}"
                            Cursor="Hand"
                            BorderThickness="0"/>

                    <Button Content="Cancel"
                            Width="100"
                            Height="40"
                            Margin="10 0"
                            Click="Cancel_Click"
                            Background="#cd5c5c"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderBrush="{x:Null}"
                            Cursor="Hand"
                            BorderThickness="0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
