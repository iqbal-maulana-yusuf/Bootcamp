<Page x:Class="BoardScrabble.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BoardScrabble"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1200"
      Title="GamePage"
      MouseMove="GamePage_MouseMove"
      MouseLeftButtonUp="GamePage_MouseLeftButtonUp">

    <Page.Resources>
        <DropShadowEffect x:Key="TileShadowEffect"
                          BlurRadius="10"
                          ShadowDepth="3"
                          Direction="315"
                          Color="Black" />
    </Page.Resources>

    <Grid Background="#e6e6f1" Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Side: Board + Tile Rack -->
        <Grid Grid.Column="0" Margin="100,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Text="Scrabble Game"
                       FontSize="30" FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,10"/>

            <!-- Board -->
            <Border Grid.Row="1"
                    Width="450" Height="450"
                    BorderThickness="1" CornerRadius="5" Margin="10"
                    Background="#e6e6f1">
                <Grid Name="BoardGrid" />
            </Border>

            <!-- Tile Rack + Buttons -->
            <StackPanel Grid.Row="2" Margin="10,0,10,10">

                <!-- Tile Rack Display -->
                <Border Padding="10" Background="WhiteSmoke"
                        BorderBrush="DarkGray" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Your Tiles:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <UniformGrid Name="TilePanel" HorizontalAlignment="Center" Rows="1" Columns="7" />
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <!-- Optional: Add buttons here -->
            </StackPanel>
        </Grid>

        <!-- Right Side: Side Panel -->
        <Border Grid.Column="1"
                Width="500"
                Height="auto"
                Background="White"
                CornerRadius="12"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                Padding="15"
                Margin="0,30,50,30"
                Effect="{StaticResource TileShadowEffect}">

            <StackPanel>
                <!-- Player Info -->
                <TextBlock Text="👥 Player Info" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
                <UniformGrid x:Name="playerPanel" Columns="{Binding PlayerCount}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                </UniformGrid>
                <Separator Margin="0,10"/>
                <!-- Tile Bag -->
                <StackPanel>
                    <Border  Background="#F8F7FD" CornerRadius="12" Padding="10" Margin="10">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal"
                                    Margin="10"
                                    VerticalAlignment="Center"
                                HorizontalAlignment="Left">
                                <TextBlock x:Name="tileBagRemainig"
                                   FontSize="16"
                                   FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding TileCount, ElementName=TileBagControl}"
                                   FontSize="16"
                                   FontWeight="SemiBold"/>
                            </StackPanel>
                            <Separator Margin="0,8"/>

                            <!-- Tiles -->
                            <WrapPanel x:Name="tileBagPanel" Margin="0,5,0,0"/>

                        </StackPanel>
                    </Border>
                </StackPanel>

                <Separator />

                <!-- Move History -->
                <StackPanel>
                    <TextBlock Text="📝 Move History" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ListBox Name="HistoryListBox" Height="70"
                         BorderBrush="#ddd" BorderThickness="1"
                         Background="#fafafa" />    
                </StackPanel>


                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Name="SwapButton" Content="🔁 Swap"
                            Width="70" Height="36"
                            FontWeight="Bold" Background="#FFD966"
                            Foreground="Black"
                            BorderBrush="#C2A600" BorderThickness="1.5"
                            Click="SwapButton_Click">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="Gray"/>
                        </Button.Effect>
                    </Button>

                    <Button Name="QuitButton" Content="🕵️‍ Quit"
                            Width="70" Height="36"
                            FontWeight="Bold" Background="#A4C2F4"
                            Foreground="Black" Margin="10,0,10,0"
                            BorderBrush="#4A90E2" BorderThickness="1.5"
                            Click="QuitButton_Click">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="Gray"/>
                        </Button.Effect>
                    </Button>

                    <Button Name="ApplyButton" Content="✅ Apply"
                            Width="70" Height="36"
                            FontWeight="Bold" Background="#93C47D"
                            Foreground="Black"
                            BorderBrush="#38761D" BorderThickness="1.5"
                            Click="ApplyButton_Click">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="Gray"/>
                        </Button.Effect>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Floating Tile Canvas -->
        <Canvas Name="FloatingCanvas"
                Panel.ZIndex="999"
                IsHitTestVisible="False" />
    </Grid>
</Page>