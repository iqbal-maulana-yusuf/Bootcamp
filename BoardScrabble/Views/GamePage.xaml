<Page x:Class="BoardScrabble.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BoardScrabble"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="GamePage"
      MouseMove="GamePage_MouseMove"
      MouseLeftButtonUp="GamePage_MouseLeftButtonUp">

    <Page.Resources>
        <DropShadowEffect x:Key="TileShadowEffect"
                          BlurRadius="10"
                          ShadowDepth="3"
                          Direction="315"
                          Color="Black" />
    </Page.Resources>

    <Grid Background="#e6e6f1" Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Side: Board + Tile Rack -->
        <Grid Grid.Column="0" Margin="100,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Text="Scrabble Game"
                       FontSize="30" FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,10"/>

            <!-- Board -->
            <Border Grid.Row="1"
                    Width="450" Height="450"
                    BorderThickness="1" CornerRadius="5" Margin="10"
                    Background="#e6e6f1">
                <Grid Name="BoardGrid" />
            </Border>

            <!-- Tile Rack + Buttons -->
            <StackPanel Grid.Row="2" Margin="10,0,10,10">

                <!-- Tile Rack Display -->
                <Border Padding="10" Background="WhiteSmoke"
                        BorderBrush="DarkGray" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Your Tiles:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <UniformGrid Name="TilePanel" HorizontalAlignment="Center" Rows="1" Columns="7" />
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
            </StackPanel>
        </Grid>

        <!-- Right Side: Side Panel -->
        <Border Grid.Column="1"
                Margin="0,10"
                Width="300"
                Background="White"
                MaxHeight="500"
                CornerRadius="12"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                Padding="15"
                Effect="{StaticResource TileShadowEffect}">

            <StackPanel>
                <!-- Player Info -->
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="👤 Player Info" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock x:Name="playerName" Text="" FontSize="14" Foreground="#444" />
                    <TextBlock x:Name="playerScore" Text="" FontSize="14" Foreground="#444"/>
                </StackPanel>

                <Separator Margin="0,10"/>

                <!-- Tile Bag -->
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="🎒 Tile Bag" FontSize="18" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock x:Name="tileBagElement" Text="Remaining Tiles: 82" FontSize="14" Foreground="#444"/>
                    <WrapPanel Name="TileBagPanel" Margin="0,5" />
                </StackPanel>

                <Separator Margin="0,10"/>

                <!-- Move History -->
                <StackPanel>
                    <TextBlock Text="📝 Move History" FontSize="18" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ListBox Name="HistoryListBox" Height="200"
                             BorderBrush="#ddd" BorderThickness="1"
                             Background="#fafafa" />
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                  HorizontalAlignment="Center"
                  >

                    <Button Name="SwapButton" Content="🔁 Swap"
                      Width="70" Height="36"
                      FontWeight="Bold" Background="#FFD966"
                      Foreground="Black"
                      BorderBrush="#C2A600" BorderThickness="1.5"
                      Click="SwapButton_Click">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="Gray"/>
                        </Button.Effect>
                    </Button>

                    <Button Name="QuitButtin" Content="🕵️‍ Quit"
                      Width="70" Height="36"
                      FontWeight="Bold" Background="#A4C2F4"
                      Foreground="Black" Margin="10,0,10,0"
                      BorderBrush="#4A90E2" BorderThickness="1.5"
                      Click="QuitButton_Click">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="Gray"/>
                        </Button.Effect>
                    </Button>

                    <Button Name="ApplyButton" Content="✅ Apply"
                      Width="70" Height="36"
                      FontWeight="Bold" Background="#93C47D"
                      Foreground="Black"
                      BorderBrush="#38761D" BorderThickness="1.5"
                      Click="ApplyButton_Click">    
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="Gray"/>
                        </Button.Effect>
                    </Button>
                </StackPanel>
            </StackPanel>
            
            
        </Border>

        <!-- Floating Tile Canvas -->
        <Canvas Name="FloatingCanvas"
                Panel.ZIndex="999"
                IsHitTestVisible="False" />
    </Grid>
</Page>
