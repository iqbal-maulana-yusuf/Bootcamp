<Page x:Class="BoardScrabble.Views.SwapTiles"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BoardScrabble.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SwapTiles">

    <Grid Background="Transparent">
        <Border Background="White" CornerRadius="12" Padding="20" Width="500" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <!-- Ikon (opsional, bisa diganti gambar lain) -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock FontSize="28" Text="🔁" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Judul -->
                <TextBlock Text="Select tiles to swap" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <!-- Jumlah yang dipilih -->
                <TextBlock x:Name="SelectedCountText" Text="0 Selected" FontSize="12" Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <!-- Panel tile -->
                <WrapPanel x:Name="TilePanel" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <!-- Tombol -->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <Button x:Name="SwapButton" Content="Swap and Pass" FontWeight="Bold" Width="200" Height="35" Margin="0,5" Background="LightGray" Foreground="White" Click="SwapButton_Click"/>
                    <Button Content="Cancel" Width="200" Height="35" FontWeight="Bold" Margin="0,5" Click="CancelButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
