<Page x:Class="BoardScrabble.FormGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BoardScrabble"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FormGame">

    <Grid Background="#f9f9fb">
        <Border Background="White" Padding="30" Width="420" VerticalAlignment="Center" HorizontalAlignment="Center" CornerRadius="12" BorderBrush="#e0e0e0" BorderThickness="1" >
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <!-- Judul -->
                <TextBlock Text="🎮 Play the Game" FontSize="26" FontWeight="Bold" Foreground="#2e3a59" TextAlignment="Center" Margin="0 0 0 30"/>

                <!-- Jumlah Pemain -->
                <TextBlock Text="Select number of players" FontWeight="SemiBold" Foreground="#555" FontSize="14"/>
                <ComboBox x:Name="PlayerCountComboBox" SelectionChanged="PlayerCountComboBox_SelectionChanged" Margin="0 8 0 20" Padding="8" FontSize="14" Background="#f2f4f7">
                    <ComboBoxItem Content="2" />
                    <ComboBoxItem Content="3" />
                    <ComboBoxItem Content="4" />
                </ComboBox>

                <!-- Nama-nama pemain -->
                <StackPanel x:Name="PlayerNamesPanel">
                    <StackPanel Margin="0 0 0 10">
                        <TextBlock Text="Player 1 Name" FontSize="13" Foreground="#555"/>
                        <TextBox x:Name="Player1TextBox" Padding="6" FontSize="14" Background="#f9fafb"/>
                    </StackPanel>

                    <StackPanel Margin="0 0 0 10">
                        <TextBlock Text="Player 2 Name" FontSize="13" Foreground="#555"/>
                        <TextBox x:Name="Player2TextBox" Padding="6" FontSize="14" Background="#f9fafb"/>
                    </StackPanel>

                    <StackPanel Margin="0 0 0 10" x:Name="Player3Panel">
                        <TextBlock Text="Player 3 Name" FontSize="13" Foreground="#555"/>
                        <TextBox x:Name="Player3TextBox" Padding="6" FontSize="14" Background="#f9fafb"/>
                    </StackPanel>

                    <StackPanel Margin="0 0 0 20" x:Name="Player4Panel">
                        <TextBlock Text="Player 4 Name" FontSize="13" Foreground="#555"/>
                        <TextBox x:Name="Player4TextBox" Padding="6" FontSize="14" Background="#f9fafb"/>
                    </StackPanel>
                </StackPanel>

                <!-- Tombol Mulai -->
                <Button Content="Start Game"
                    Click="StartGame_Click"
                    Height="42"
                    FontSize="15"
                    Background="#2b7a78"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="{x:Null}"
                    Cursor="Hand"
                    Padding="10,5"
                    HorizontalAlignment="Stretch"
                    BorderThickness="0"/>
            </StackPanel>
        </Border>
    </Grid>

</Page>
